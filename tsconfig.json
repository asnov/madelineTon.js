{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.?s"
  ],
  "exclude": [
    "node_modules"
  ]
}
